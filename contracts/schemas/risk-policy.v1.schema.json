{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://trade-nexus.lona.agency/schemas/risk-policy.v1.schema.json",
  "title": "Trade Nexus Risk Policy v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "mode",
    "limits",
    "killSwitch",
    "actionsOnBreach"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "risk-policy.v1"
    },
    "mode": {
      "type": "string",
      "enum": [
        "advisory",
        "enforced"
      ]
    },
    "limits": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "maxNotionalUsd",
        "maxPositionNotionalUsd",
        "maxDrawdownPct",
        "maxDailyLossUsd"
      ],
      "properties": {
        "maxNotionalUsd": {
          "type": "number",
          "minimum": 0
        },
        "maxPositionNotionalUsd": {
          "type": "number",
          "minimum": 0
        },
        "maxDrawdownPct": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "maxDailyLossUsd": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "killSwitch": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "enabled"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "triggered": {
          "type": "boolean"
        },
        "triggeredAt": {
          "type": "string",
          "format": "date-time"
        },
        "reason": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "actionsOnBreach": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "reject_order",
          "cancel_open_orders",
          "halt_deployments",
          "notify_ops"
        ]
      }
    }
  }
}
